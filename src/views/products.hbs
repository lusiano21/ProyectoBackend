<h1>Productos</h1>

{{#each payload}}
  <div class="card" style="width: 18rem;">
    <img src="{{this.image}}" class="card-img-top" alt="restaurante">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      {{#for product of products}}
      <p class="card-text">{{this.product.id}}</p>
      <p class="card-text">{{this.product.menu}}</p>
      <p class="card-text">{{this.product.price}}</p>
      {{/for}}
      <a href="#" class="btn btn-primary">Comprar</a>
    </div>
  </div>
  {{/each}}

