<h1>Productos</h1>
<section>
<article class="d-flex justify-content-around flex-wrap">
{{#each payload}}
  <div class="card" style="width:18rem;">
    <img src="{{this.image}}" class="card-img-top" alt="restaurante">
    <div class="card-body d-flex flex-column justify-content-end">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.menuId}}</p>
      <p class="card-text">{{this.menu}}</p>
      <p class="card-text">${{this.price}}</p>
      <div id="buttons">
      {{#if success}}
      <a href="#" class="btn btn-outline-primary" type="button">Comprar</a>
      {{/if}}
      </div>
      <strong class="card-text">Disponibles: {{this.stock}}</strong>
    </div>
  </div>
{{/each}}
</article>
</section>
